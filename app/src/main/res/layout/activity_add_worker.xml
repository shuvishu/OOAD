<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sairam.ooad.addWorker">

    <EditText
        android:id="@+id/NWusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="new worker username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/NWpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/NWusername"
        android:layout_below="@+id/NWusername"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="new worker password" />

    <EditText
        android:id="@+id/NWname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/NWpass"
        android:layout_below="@+id/NWpass"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="new worker name" />

    <EditText
        android:id="@+id/NWcontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/NWname"
        android:layout_below="@+id/NWname"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="number"
        android:hint="new worker contact"/>

    <Button
        android:id="@+id/add_new_Worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NWcontact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="add new worker"
        android:onClick="addNewWorker"/>
</RelativeLayout>
