<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sairam.ooad.deleteWorker">

    <EditText
        android:id="@+id/ETdeleteworker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="enter worker username to delete" />

    <Button
        android:id="@+id/BDeleteworker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ETdeleteworker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="click to delete worker"
        android:onClick="delete_worker"/>
</RelativeLayout>
