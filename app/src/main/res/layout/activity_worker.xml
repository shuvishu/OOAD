<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sairam.ooad.worker">


    <Button
        android:id="@+id/addmother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="141dp"
        android:text="ADD mother"
        android:onClick="addmother"/>

    <Button
        android:id="@+id/updatemother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="update mother information"
        android:layout_alignBaseline="@+id/addmother"
        android:layout_alignBottom="@+id/addmother"
        android:layout_toEndOf="@+id/addmother"
        android:onClick="updatemotherinfo"/>
</RelativeLayout>
